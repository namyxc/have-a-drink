<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ingredientItemPadding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/dummyIngredientName"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientAmount"
        app:layout_constraintTop_toTopOf="@id/ingredientName"
        app:layout_constraintLeft_toRightOf="@id/ingredientName"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/dummyIngredientAmount"
        android:gravity="right"/>

</androidx.constraintlayout.widget.ConstraintLayout>